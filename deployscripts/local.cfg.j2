jenkins.url = {{ lookup('env', "JENKINS_URL") }}
jenkins.tag = {{ lookup('env', "BUILD_TAG") }}
git.branch = {{ lookup('env', "GIT_BRANCH") }}
git.commit = {{ lookup('env', "GIT_COMMIT") }}
